{
  "manifest_version": 3,
  "name": "Plus 2",
  "version": "3.2.3",
  "description": "Enhances Twitch and YouTube chat with message highlighting, activity gauges, polls, and more for streamers.",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "scripting"
  ],
  "host_permissions": [
    "*://*.twitch.tv/*",
    "*://*.youtube.com/*",
    "https://awfulstreamview--streamview-ba878.us-central1.hosted.app/*",
    "https://studio--plus2-streamview.us-central1.hosted.app/*",
    "*://*.streamview.channel/*",
    "http://localhost:*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*",
        "*://*.youtube.com/*"
      ],
      "js": [
        "lib/browser-polyfill.min.js",
        "scripts/platform-adapters/base.js",
        "scripts/platform-adapters/twitch.js", 
        "scripts/platform-adapters/youtube.js",
        "scripts/message-processing.js",
        "scripts/ui-injection.js",
        "scripts/search-feature.js",
        "scripts/tooltip-handler.js",
        "scripts/auto-scroll.js",
        "scripts/app.js"
      ]
    }
  ],
  "action": {
    "default_popup": "ui/popup.html",
    "default_icon": {
      "128": "icons/Plus2_128.png"
    }
  },
  "options_ui": {
    "page": "ui/options.html",
    "open_in_tab": true
  },
  "icons": {
    "128": "icons/Plus2_128.png"
  },
  "web_accessible_resources": [{
    "resources": ["icons/Plus2_128.png", "ui/popout.html", "config/default-settings.json"],
    "matches": ["*://*.twitch.tv/*", "*://*.youtube.com/*"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; media-src 'self' data:; connect-src 'self' https: http://localhost:*;"
  }
}